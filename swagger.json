{
  "openapi": "3.0.0",
  "info": {
    "title": "Goflow API",
    "version": "2.0.0"
  },
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "health",
        "summary": "check health of the service",
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "examples": {
                  "OK": {
                    "value": {
                      "health": "OK"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/jobs": {
      "get": {
        "operationId": "listJobs",
        "summary": "list jobs",
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "examples": {
                  "exampleJobs": {
                    "value": {
                      "jobs": [
                        "exampleComplexAnalytics",
                        "exampleCustomOperator"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/jobs/{jobname}": {
      "get": {
        "operationId": "jobDetails",
        "summary": "get the details for a given job",
        "parameters": [
          {
            "in": "path",
            "name": "jobname"
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "examples": {
                  "complexAnalyticsJob": {
                    "value": {
                      "job": "exampleComplexAnalytics",
                      "tasks": [
                        "sleepOne",
                        "addTwoFour",
                        "addThreeFour",
                        "whoopsWithConstantDelay",
                        "whoopsWithExponentialBackoff",
                        "totallySkippable",
                        "cleanUp",
                        "addOneOne",
                        "sleepTwo"
                      ],
                      "dag": {
                        "addOneOne": [
                          "sleepTwo",
                          "addThreeFour"
                        ],
                        "addThreeFour": [],
                        "addTwoFour": [],
                        "cleanUp": [],
                        "sleepOne": [
                          "addOneOne",
                          "whoopsWithConstantDelay",
                          "whoopsWithExponentialBackoff"
                        ],
                        "sleepTwo": [
                          "addTwoFour"
                        ],
                        "totallySkippable": [
                          "cleanUp"
                        ],
                        "whoopsWithConstantDelay": [
                          "totallySkippable"
                        ],
                        "whoopsWithExponentialBackoff": [
                          "totallySkippable"
                        ]
                      },
                      "schedule": "* * * * *",
                      "active": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/executions": {
      "get": {
        "operationId": "listExecutions",
        "summary": "query and list job executions",
        "parameters": [
          {
            "in": "query",
            "name": "jobname",
            "schema": {
              "type": "string"
            },
            "description": "(optional) the job name"
          },
          {
            "in": "query",
            "name": "state",
            "schema": {
              "type": "string"
            },
            "description": "(optional) the job state, valid values are [running, failed, successful]"
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "examples": {
                  "exampleExecutions": {
                    "value": {
                      "executions": [
                        {
                          "id": "b43e5f75-aa2a-4859-b6b9-f551ca258196",
                          "job": "example-complex-analytics",
                          "submitted": "2024-02-03T13:26:42.038130297Z",
                          "state": "failed",
                          "tasks": [
                            {
                              "name": "sleep-one",
                              "state": "successful"
                            },
                            {
                              "name": "add-one-one",
                              "state": "successful"
                            },
                            {
                              "name": "sleep-two",
                              "state": "successful"
                            },
                            {
                              "name": "add-two-four",
                              "state": "successful"
                            },
                            {
                              "name": "add-three-four",
                              "state": "successful"
                            },
                            {
                              "name": "whoops-with-constant-delay",
                              "state": "failed"
                            },
                            {
                              "name": "whoops-with-exponential-backoff",
                              "state": "failed"
                            },
                            {
                              "name": "totally-skippable",
                              "state": "skipped"
                            },
                            {
                              "name": "clean-up",
                              "state": "successful"
                            }
                          ]
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/jobs/{jobname}/submit": {
      "post": {
        "operationId": "submitJob",
        "summary": "submit a job for execution",
        "parameters": [
          {
            "in": "path",
            "name": "jobname"
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "examples": {
                  "customOperator": {
                    "value": {
                      "job": "exampleCustomOperator",
                      "success": true,
                      "submitted": "2023-06-21T15:02:39.943428403Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/jobs/{jobname}/toggle": {
      "post": {
        "operationId": "toggleJobSchedule",
        "summary": "toggle a job schedule on or off",
        "parameters": [
          {
            "in": "path",
            "name": "jobname"
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "examples": {
                  "customOperator": {
                    "value": {
                      "job": "exampleCustomOperator",
                      "success": true,
                      "active": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
